<Window x:Class="TickerWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TickerWpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="btnSubscribeTicker1" Content="Subscribe Ticker1" HorizontalAlignment="Left" Margin="36,20,0,0" VerticalAlignment="Top" Width="150" Click="btnSubscribeTicker1_Click"/>
        <Button x:Name="btnUnsubscribeTicker1" Content="Unsubscribe Ticker1" HorizontalAlignment="Left" Margin="200,20,0,0" VerticalAlignment="Top" Width="148" Click="btnUnsubscribeTicker1_Click"/>
        <Button x:Name="btnSubscribeTicker2" Content="Subscribe Ticker2" HorizontalAlignment="Left" Margin="430,20,0,0" VerticalAlignment="Top" Width="150" Click="btnSubscribeTicker2_Click"/>
        <Button x:Name="btnUnsubscribeTicker2" Content="Unsubscribe Ticker2" HorizontalAlignment="Left" Margin="618,20,0,0" VerticalAlignment="Top" Width="148" Click="btnUnsubscribeTicker2_Click"/>
        <StackPanel x:Name="pnlTickers" Height="NaN" Margin="0,54,0,0"/>
    </Grid>
</Window>
